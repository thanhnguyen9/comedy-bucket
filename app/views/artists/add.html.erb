<div class="row main-my-page">
  <br>
  <hr>
  <h2 class="intro-text text-center">Request</h2>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <div class="request">
        <%= simple_form_for @comedian ||= Comedian.new, url: comedians_path do |f| %>
          <%= f.input :name %>
          <%= f.submit "Add", class: "btn btn-success" %>
        <%end%>
      </div>
    </div>

      <div class="col-md-4 col-md-offset-1">
      <table class="table table-bordered">
        <tr>
          <th>
            Name
          </th>
        </tr>
        <% Comedian.all.each do |comedian| %>
          <tr>
            <td>
              <%= comedian.name %>
            </td>
          </tr>
        <%end%>
      </table>
    </div>
  </div>
  </div>
</div>
