<% @comments.each do |comment| %>
  <% if comment.product_id == @product.id %>
    <%= link_to "#" do %>
    <span id="user-name"><strong><%= comment.user.email %></strong>
      <%end%>
    </span> <%= comment.post %> <span id="time"><%= time_ago_in_words(comment.created_at) %> ago</span><br>
  <%end%>
<%end%>
