<div class="row main-my-page">
  <div class="col-md-10">
    <% if @products.any? %>
      <p id="user-email">
        <%= @user.email %>
      </p>
      <% @products.each do |product| %>

          <div class="col-sm-6 col-md-6">
            <div class="thumbnail">
              <div class="embed-responsive embed-responsive-4by3">
                <iframe class="embed-responsive-item" src="<%= product.embed(product.url) %>"></iframe>
              </div>
              <div class="caption">
                <p><%= link_to "Show", product_path(product), class: "btn btn-primary" %></p>
              </div>
            </div>
          </div>

        <% end %>
    <%else%>
      <p id="user-email">
        <%= @user.email %> has no video!
      </p>
    <%end%>
  </div>
  <br>

  <span id="follow">
    <% if !current_user.friends.include? @user %>
      <%= button_to "Subcribe", relationships_path(friend_id: @user.id), class: "btn btn-danger" %><br>
    <%else%>
      <%= button_to "Unsubcribe", relationship_path(user_id: current_user.id, friend_id: @user.id), method: :delete, class: "btn btn-danger" %>
    <%end%>
  </span>

  <div class="col-md-2">
    <div class="thumbnail-on-recommend-side subscribe">
      <%= render partial: "products/side" %>
    </div>
  </div>
</div>
