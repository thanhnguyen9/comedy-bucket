<div class="row main-my-page">
  <div class="col-md-9">
    <% if @products.any? %>
      <p id="user-email">
        <%= @user.email %>
      </p>
      <% @products.each do |product| %>

          <div class="col-sm-6 col-md-6">
            <div class="thumbnail">
              <iframe width="320" height="349" src="<%= product.embed(product.url) %>" frameborder="0" allowfullscreen></iframe>
              <div class="caption">
                <p><%= link_to "Show", product_path(product), class: "btn btn-primary" %></p>
              </div>
            </div>
          </div>

        <% end %>
    <%else%>
      <p id="user-email">
        <%= @user.email %> has no video!
      </p>
    <%end%>
  </div>
  <br>

  <span id="follow">
    <% if !current_user.friends.include? @user %>
      <%= button_to "Connect", relationships_path(friend_id: @user.id), class: "btn btn-danger" %><br>
    <%else%>
      <%= button_to "Disconnect", relationship_path(user_id: current_user.id, friend_id: @user.id), method: :delete, class: "btn btn-danger" %>
    <%end%>
  </span>
  <%= render partial: "products/recommend" %>
</div>
