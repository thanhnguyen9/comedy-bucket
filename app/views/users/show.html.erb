<div class="row main-my-page">
  <div class="col-md-9">
    <% if @products.any? %>
      <p id="user-email">
        <%= @user.email %>
      </p>
      <% @products.each do |product| %>

          <div class="col-sm-6 col-md-6">
            <div class="thumbnail">
              <iframe width="320" height="349" src="<%= product.embed(product.url) %>" frameborder="0" allowfullscreen></iframe>
              <div class="caption">
                <p><%= link_to "Show", product_path(product), class: "btn btn-primary" %></p>
              </div>
            </div>
          </div>

        <% end %>
    <%else%>
      <p id="user-email">
        <%= @user.email %> has no video!
      </p>
    <%end%>
  </div>
  <br>
  <span id="follow">
    <%= simple_form_for @relationship, url: "/relationships" do |f| %>
    <%= f.association :user, :as => :hidden%>
    <%= f.association :friend, :as => :hidden %>

    <%= f.submit "Subcribe", class: "btn btn-danger" %>
    <%end%>
    <% Relationship.all.each do |relationship| %>
      <% if relationship.user_id == current_user.id && relationship.friend_id == @user.id %>
        <%= link_to "Unscribe", relationship_path(relationship), method: :delete, class: "btn btn-danger" %>
      <%end%>
    <%end%>
  <%= render partial: "products/recommend" %>
</div>
